<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="Course_Selection.Add_Course.AddCourseController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Course Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="courseNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Course Code:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="courseCodeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>


    <Button text="Add Course" onAction="#handleAddCourse" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
