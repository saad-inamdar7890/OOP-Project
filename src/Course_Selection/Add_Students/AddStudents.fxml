<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="Course_Selection.Add_Students.AddStudentsController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Select Course:"/>
    <ComboBox fx:id="courseComboBox"/>
    <Label text="Course_Selection.Student List:"/>
    <TableView fx:id="studentTableView">
        <columns>
            <TableColumn fx:id="studentNameColumn" text="Course_Selection.Student Name" prefWidth="200"/>
            <TableColumn fx:id="studentIdColumn" text="Course_Selection.Student ID" prefWidth="150"/>
            <TableColumn fx:id="marksColumn" text="Marks" prefWidth="100"/>
        </columns>
    </TableView>
    <Button text="Browse CSV" onAction="#handleBrowseCSV"/>
    <Button text="Save" onAction="#handleSave"/>
</VBox>
